body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-image: url('C:/Users/user/Desktop/Trabajo fullstack/imagenes/fondo.jpg');
    background-size: cover;
    background-position: center;
    opacity: 0.4;
}

header {
    background-color: #2b661c;
    color: #fff;
    padding: 20px;
    border-radius: 10%;
    opacity: 0.6;
}

header:hover {
    background-color: #e00000;
}

header h1 {
    margin: 0;
    text-align: center;
}

nav ul {
    list-style-type: none;
    padding: 0;
    text-align: center;
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
}

nav ul li a:hover {
    background-color: #000000;
}

main {
    padding: 20px;
}

section {
    margin-bottom: 40px;
}

footer {
    background-color: #2b661c;
    color: white;
    text-align: center;
    opacity: 0.6;
}

footer:hover {
    background-color: #e00000;
}

.courses-section {
    text-align: center;
    padding: 20px;
}

.courses-section .images-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px;
}

.courses-section .images-container img {
    width: calc(20% - 10px);
    height: auto;
    max-width: 100px;
}

.courses-section .btn {
    display: inline-block;
    background-color: #2b661c;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.courses-section .btn:hover {
    background-color: #555;
}

.btn {
    display: inline-block;
    background-color: #2b661c;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
}

.btn:hover {
    background-color: #555;
}

/* Media query para computadoras */
@media (min-width: 1024px) {
    .video-section {
        padding: 50px;
    }
}

/* Media query para tablets */
@media (max-width: 1023px) and (min-width: 768px) {
    .video-container {
        width: 70%;
    }
    .content-section {
        padding: 20px;
    }
}

/* Media query para celulares */
@media (max-width: 767px) {
    .video-container {
        width: 90%;
    }
    .content-section {
        padding: 10px;
    }
}

.video-container {
    position: relative;
    width: 50%;
    height: 50vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.video-container video {
    position: absolute;
    top: 0;
    left: 0;
    width: auto;
    height: auto;
    max-width: 50%;
    max-height: 50%;
}

#Formulario {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

#Formulario fieldset {
    border: none;
}

#Formulario .input {
    margin-bottom: 20px;
}

#Formulario label {
    display: block;
    margin-bottom: 5px;
}

#Formulario input[type="text"],
#Formulario input[type="email"],
#Formulario textarea,
#Formulario select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

#Formulario select {
    width: 100%;
}

#Formulario .btn {
    display: inline-block;
    background-color: #2b661c;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

#Formulario .btn,
#Formulario .custom-file-upload {
    display: inline-block;
    background-color: #2b661c;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
}

#Formulario .btn:hover,
#Formulario .custom-file-upload:hover {
    background-color: #555;
}

#Formulario input[type="file"] {
    display: none;
}

.content-section h2 {
    text-align: center;
}

.centered-text {
    width: 60%;
    margin: 0 auto;
    text-align: justify;
    background-color: #ffffff;
    opacity: 0.6;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}
